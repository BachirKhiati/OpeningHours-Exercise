{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2020",
            "esnext"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "target": "es2020"
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "__tests__/**/*.test.tsx"
    ]
}
